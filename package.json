{
  "name": "onecfg",
  "version": "5.2.1",
  "description": "One config file to generate them all.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/onecfg.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "preprepare": "tsc --declaration --esModuleInterop --module node16 --outDir lib src/index.ts",
    "prepare": "node onecfg.js",
    "ci": "run-p compile:check compile:emit format:check lint test",
    "compile:check": "tsc --pretty",
    "compile:emit": "tsc --pretty --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --silent --passWithNoTests",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.1.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@onecfg/standard": "^5.1.0",
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.2",
    "@types/js-yaml": "^4.0.5",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.0.0",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^2.2.1",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  }
}
