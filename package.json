{
  "name": "onecfg",
  "version": "4.1.0",
  "description": "One config file to generate them all.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/onecfg.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile format:check lint test",
    "compile": "tsc --pretty",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "preprepare": "tsc --declaration --esModuleInterop --module es2020 --moduleResolution node --outDir lib src/index.ts ",
    "prepare": "node onecfg.js",
    "release": "npm version",
    "postrelease": "git push --follow-tags",
    "test": "jest --silent"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.1.0",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@onecfg/standard": "^3.1.0",
    "@swc/core": "^1.2.147",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^17.0.21",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-markdown": "^2.2.1",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
